
<div class="center">
    <div class="col-xl-12">

<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-group">
<div class="control-label col-sm-2">
      <%= form.label :username, class: "label1" %>
    </div>
    <div class="col-sm-12">
    <%= form.text_field :username ,class:"form-control" , placeholder: "Enter user name", autofocus: true %>
  </div>
</div>


<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :email, class: "label1" %>
  </div>
  <div class="col-sm-12">
  <%= form.email_field :email, rows: 4 ,class:"form-control" , placeholder: "Enter email", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :password, class: "label1" %>
  </div>
  <div class="col-sm-12">
  <%= form.password_field :password, rows: 8 ,class:"form-control" , placeholder: "Enter Password", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :status, class: "label1" %>
  </div>
  <div class="col-sm-12">
  <%= form.number_field :status, rows: 8 ,class:"form-control" , placeholder: "Enter 1 for buyer & 2 for seller", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-10">
    <%= form.submit(@user.new_record? ? "Sign up" : "Update Account", class: 'btn btn-primary btn-lg') %>
  </div>
</div>
<% end %>
</div>
</div>
